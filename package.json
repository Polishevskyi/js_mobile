{
  "name": "mobile-test-automation-suite",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Mobile and API test automation framework with WebdriverIO, Appium, and Allure reporting",
  "scripts": {
    "test": "npm run test:api && npm run test:mobile",
    "test:api": "wdio run wdio.api.conf.js",
    "test:mobile": "wdio run wdio.mobile.conf.js",
    "bs:upload-app": "node bs-upload-app.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:open": "allure open allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "mobile-testing",
    "api-testing",
    "test-automation",
    "allure-reports",
    "javascript",
    "es6",
    "mocha",
    "chai"
  ],
  "author": "Mobile Test Automation Team",
  "license": "ISC",
  "devDependencies": {
    "@wdio/allure-reporter": "^8.16.12",
    "@wdio/appium-service": "^8.16.12",
    "@wdio/browserstack-service": "^9.20.0",
    "@wdio/cli": "^8.16.12",
    "@wdio/local-runner": "^8.16.12",
    "@wdio/mocha-framework": "^8.16.12",
    "@wdio/spec-reporter": "^8.16.12",
    "allure-commandline": "^2.32.0",
    "appium": "^2.0.1",
    "appium-uiautomator2-driver": "^5.0.6",
    "chai": "^5.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "mocha": "^11.1.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "form-data": "^4.0.4",
    "tweetsodium": "^0.0.4",
    "webdriverio": "^8.16.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
